{
	"$schema": "https://raw.githubusercontent.com/devcontainers/spec/main/schemas/devContainer.schema.json",
	"customizations": {
		"vscode": {
			"extensions": [
				"docker.docker",
				"editorconfig.editorconfig",
				"exiasr.hadolint",
				"github.vscode-github-actions",
				"github.copilot",
				"github.copilot-chat",
				"google.geminicodeassist",
				"mkhl.shfmt",
				"ms-azuretools.vscode-containers",
				"redhat.vscode-yaml",
				"sanjulaganepola.github-local-actions",
				"tamasfe.even-better-toml",
				"timonwong.shellcheck",
				"zizmor.zizmor-vscode"
			],
			"settings": {
				"terminal.integrated.defaultProfile.linux": "fish",
				"terminal.integrated.profiles.linux": {
					"fish": {
						"path": "/usr/local/bin/fish"
					}
				}
			}
		}
	},
	"dockerComposeFile": "compose.yaml",
	"features": {
		"ghcr.io/aquaproj/devcontainer-features/aqua-installer:0.1.6": {
			"aqua_version": "v2.55.0"
		}
	},
	"initializeCommand": [
		"./.devcontainer/hooks/initialize-command.sh"
	],
	"name": "${localWorkspaceFolderBasename}",
	"postCreateCommand": [
		"run-dir",
		"${containerWorkspaceFolder}/.devcontainer/hooks/post-create"
	],
	"postStartCommand": [
		"run-dir",
		"${containerWorkspaceFolder}/.devcontainer/hooks/post-start"
	],
	"service": "dev",
	"workspaceFolder": "/home/nonroot/${localWorkspaceFolderBasename}"
}
