{
	"$schema": "https://raw.githubusercontent.com/devcontainers/spec/main/schemas/devContainer.schema.json",
	"customizations": {
		"vscode": {
			"extensions": [
				"docker.docker",
				"editorconfig.editorconfig",
				"esbenp.prettier-vscode",
				"exiasr.hadolint",
				"github.vscode-github-actions",
				"github.copilot",
				"github.copilot-chat",
				"google.geminicodeassist",
				"mkhl.shfmt",
				"ms-azuretools.vscode-containers",
				"redhat.vscode-yaml",
				"sanjulaganepola.github-local-actions",
				"tamasfe.even-better-toml",
				"timonwong.shellcheck",
				"zizmor.zizmor-vscode"
			],
			"settings": {
				"terminal.integrated.defaultProfile.linux": "fish",
				"terminal.integrated.profiles.linux": {
					"fish": {
						"path": "/usr/local/bin/fish"
					}
				}
			}
		}
	},
	"dockerComposeFile": "compose.yaml",
	"features": {
		"ghcr.io/aquaproj/devcontainer-features/aqua-installer:0.1.6": {
			"aqua_version": "v2.55.0"
		}
	},
	"initializeCommand": ["./.devcontainer/initialize-command.sh"],
	"name": "${localWorkspaceFolderBasename}",
	"postCreateCommand": ["./.devcontainer/post-create.sh"],
	"postStartCommand": ["task", "hook:post-start"],
	"remoteEnv": {
		"PATH": "/home/nonroot/workspace/node_modules/.bin:${containerEnv:PATH}"
	},
	"service": "dev",
	"workspaceFolder": "/home/nonroot/${localWorkspaceFolderBasename}"
}
